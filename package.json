{
  "name": "activity-listing",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "web": "expo start --web",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "mock:api": "json-server --watch src/api/mockActivities.json --port 4000",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-masked-view/masked-view": "0.3.2",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "axios": "^1.13.1",
    "expo": "~54.0.20",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "^0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.21.0"
  },
  "private": true,
  "devDependencies": {
    "@babel/preset-flow": "^7.27.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "babel-preset-expo": "^10.0.1",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.2",
    "json-server": "^1.0.0-beta.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jestSetup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|@react-native|react-native|@react-navigation|react-clone-referenced-element|expo-modules-core|expo-constants|expo-font|expo-asset|expo-router)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testEnvironment": "jsdom"
  }
}
